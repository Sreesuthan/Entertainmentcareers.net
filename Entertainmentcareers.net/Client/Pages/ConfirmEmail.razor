@layout MembershipLayout
@page "/ConfirmEmail/{token}"
@inject HttpClient Http
@inject NavigationManager navigationManager
@inject MudBlazor.ISnackbar snackBar



@code{
    [Parameter]
    public string? Token { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var response = await Http.PostAsJsonAsync($"api/ApplicationUser/verify", Token);
        if (response.StatusCode == System.Net.HttpStatusCode.BadRequest)
        {
            snackBar.Add("Error confirming your email.", Severity.Error);
        }
        if (!response.IsSuccessStatusCode)
        {
            snackBar.Add("Thank you for confirming your email.", Severity.Success);
            navigationManager.NavigateTo("/signin");
        }
    }
}
