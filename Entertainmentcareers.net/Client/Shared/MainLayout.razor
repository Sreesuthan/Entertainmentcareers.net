@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Style="background-color: #0E5FAC;">
        <MudSpacer/>
        <MudMenu FullWidth="true" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.BottomCenter">
            <ActivatorContent>
                <MudButton EndIcon="@Icons.Material.Filled.KeyboardArrowDown" Variant="Variant.Text" Style="text-transform:none;" Class="text-white mr-2">Resources</MudButton>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem>Profile</MudMenuItem>
                <MudMenuItem>Theme</MudMenuItem>
                <MudMenuItem>Usage</MudMenuItem>
                <MudMenuItem>Sign Out</MudMenuItem>
            </ChildContent>
        </MudMenu>
        <MudMenu FullWidth="true" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.BottomCenter"TransformOrigin="Origin.BottomCenter">
            <ActivatorContent>
                <MudButton EndIcon="@Icons.Material.Filled.KeyboardArrowDown" Variant="Variant.Text" Style="text-transform:none;" Class="text-white mr-2">Site Advertising</MudButton>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem>Profile</MudMenuItem>
                <MudMenuItem>Theme</MudMenuItem>
                <MudMenuItem>Usage</MudMenuItem>
                <MudMenuItem>Sign Out</MudMenuItem>
            </ChildContent>
        </MudMenu>
        <MudMenu FullWidth="true" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.BottomCenter"TransformOrigin="Origin.BottomCenter">
            <ActivatorContent>
                <MudButton EndIcon="@Icons.Material.Filled.KeyboardArrowDown" Variant="Variant.Text" Style="text-transform:none;" Class="text-white mr-2">Support</MudButton>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem>Profile</MudMenuItem>
                <MudMenuItem>Theme</MudMenuItem>
                <MudMenuItem>Usage</MudMenuItem>
                <MudMenuItem>Sign Out</MudMenuItem>
            </ChildContent>
        </MudMenu>
        <MudMenu FullWidth="true" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.BottomCenter">
            <ActivatorContent>
                <MudButton EndIcon="@Icons.Material.Filled.KeyboardArrowDown" Variant="Variant.Text" Style="text-transform:none;" Class="text-white mr-2">About</MudButton>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem>Profile</MudMenuItem>
                <MudMenuItem>Theme</MudMenuItem>
                <MudMenuItem>Usage</MudMenuItem>
                <MudMenuItem>Sign Out</MudMenuItem>
            </ChildContent>
        </MudMenu>
        <MudMenu FullWidth="true" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.BottomCenter">
            <ActivatorContent>
                <MudButton EndIcon="@Icons.Material.Filled.KeyboardArrowDown" Variant="Variant.Text" Style="text-transform:none;" Class="text-white mr-8">Contact Us</MudButton>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem>Profile</MudMenuItem>
                <MudMenuItem>Theme</MudMenuItem>
                <MudMenuItem>Usage</MudMenuItem>
                <MudMenuItem>Sign Out</MudMenuItem>
            </ChildContent>
        </MudMenu>
        <MudButton Href="" Size="Size.Large" Style="background-color: #084A88;" Class="text-white" StartIcon="@Icons.Material.Filled.Login" Variant="Variant.Filled" >SIGN IN</MudButton>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="pt-3">
            <MudGrid Style="background-color:#136BBE;">
                <MudImage Src="Images/Group 53.png" Height="55" Width="145" Class="mt-5 ml-12"/>
                <MudSpacer />
                <MudButton Size="Size.Large" Style="max-height:45px" Variant="Variant.Text" Class="text-white mr-2 mt-6">Jobs</MudButton>
                <MudButton Size="Size.Large" Style="max-height:45px" Variant="Variant.Text" Class="text-white mr-2 mt-6">Internships</MudButton>
                <MudButton Size="Size.Large" Style="max-height:45px" Variant="Variant.Text" Class="text-white mr-2 mt-6">Companies</MudButton>
                <MudMenu FullWidth="true" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.BottomCenter">
                    <ActivatorContent>
                        <MudButton Size="Size.Large" EndIcon="@Icons.Material.Filled.KeyboardArrowDown" Variant="Variant.Text" Class="text-white mr-2">JOB SEEKERS </MudButton>
                    </ActivatorContent>
                    <ChildContent>
                        <MudMenuItem>Profile</MudMenuItem>
                        <MudMenuItem>Theme</MudMenuItem>
                        <MudMenuItem>Usage</MudMenuItem>
                        <MudMenuItem>Sign Out</MudMenuItem>
                    </ChildContent>
                </MudMenu>
                <MudMenu FullWidth="true" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.BottomCenter">
                    <ActivatorContent>
                        <MudButton Size="Size.Large" EndIcon="@Icons.Material.Filled.KeyboardArrowDown" Variant="Variant.Text" Class="text-white mr-16">EMPLOYERS</MudButton>
                    </ActivatorContent>
                    <ChildContent>
                        <MudMenuItem>Profile</MudMenuItem>
                        <MudMenuItem>Theme</MudMenuItem>
                        <MudMenuItem>Usage</MudMenuItem>
                        <MudMenuItem>Sign Out</MudMenuItem>
                    </ChildContent>
                </MudMenu>
                <MudTextField @bind-Value="Search" Style="background-color: #FFFFFF; max-width:300px" Class="p-4" Margin="Margin.Dense" Variant="Variant.Outlined" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Search" Placeholder="Search for any job or keyword" AdornmentColor="Color.Default" />
            </MudGrid>
            @Body
            <MudGrid Style="background-color:#F0F7FB;" Justify="Justify.Center">
                <MudItem xs="10">
                    <MudGrid Class="mt-8">
                        <MudItem xs="3" Class="text-center">
                            <MudImage Src="Images/Group 17.png" Height="55" Width="145" Class="mt-1"/>
                        </MudItem>
                        <MudItem xs="2">
                            <MudText Typo="Typo.h6" Style="color:#08243D;font-family: 'Oswald';">SUPPORT</MudText>
                            <ul class="list-unstyled mt-4">
                                <li><a href="#" style="color:#0D3255;">Report A Problem</a></li>
                                <li><a href="#" style="color:#0D3255;">Job Seeker FAQ</a></li>
                                <li><a href="#" style="color:#0D3255;">Employer FAQ</a></li>
                                <li><a href="#" style="color:#0D3255;">Contact Us</a></li>
                            </ul>
                        </MudItem>
                        <MudItem xs="2">
                            <MudText Typo="Typo.h6" Style="color:#08243D;font-family: 'Oswald';">EMPLOYERS</MudText>
                            <ul class="list-unstyled mt-4">
                                <li><a href="#" style="color:#0D3255;">Post A Job</a></li>
                                <li><a href="#" style="color:#0D3255;">Employer FAQ</a></li>
                                <li><a href="#" style="color:#0D3255;">Premium Posting</a></li>
                                <li><a href="#" style="color:#0D3255;">Who Uses Us</a></li>
                            </ul>
                        </MudItem>
                        <MudItem xs="2">
                            <MudText Typo="Typo.h6" Style="color:#08243D;font-family: 'Oswald';">ADVETISING</MudText>
                            <ul class="list-unstyled mt-4">
                                <li><a href="#" style="color:#0D3255;">Site Advertising</a></li>
                            </ul>
                        </MudItem>
                        <MudItem xs="3" Class="text-center">
                            <MudText Typo="Typo.h6" Style="color:#08243D;font-family: 'Oswald';">FOLLOW US</MudText>
                            <MudIconButton Icon="@Icons.Custom.Brands.Facebook" Size="Size.Small" Class="mt-4" Color="Color.Info" aria-label="Facebook" />
                            <MudIconButton Icon="@Icons.Custom.Brands.Twitter" Size="Size.Small" Class="mt-4" Color="Color.Info" aria-label="Twitter" />
                            <MudIconButton Icon="@Icons.Custom.Brands.YouTube" Size="Size.Small" Class="mt-4" Color="Color.Info" aria-label="Youtube" />
                            <MudIconButton Icon="@Icons.Custom.Brands.TikTok" Size="Size.Small" Class="mt-4" Color="Color.Info" aria-label="TikTok" />
                        </MudItem>
                    </MudGrid>
                    <MudGrid Justify="Justify.FlexEnd" Class="mt-4">
                        <MudImage Src="Images/image 4.png" Height="70" Width="140" />
                    </MudGrid>
                    <MudGrid Class="mt-6">
                        <MudItem xs="6">
                            <MudText Typo="Typo.body2" Align="Align.Start" Style="color:#0D3255;">© 1999-2022 EntertainmentCareers.Net • 2118 Wilshire Blvd #401, Santa Monica, CA 90403EntertainmentCareers.Net® is a trademark of EntertainmentCareers.Net, Inc. and may not be used without permission</MudText>
                        </MudItem>
                        <MudItem xs="2"></MudItem>
                        <MudItem xs="4">
                            <MudText Typo="Typo.body2" Align="Align.End" Style="color:#0D3255;">The security of your personal information is of paramount importance to us. We hire outside companies to test our security on a daily basis</MudText>
                        </MudItem>
                    </MudGrid>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </MudMainContent>
</MudLayout>



@code {
    public string Search { get; set; } = string.Empty;
}